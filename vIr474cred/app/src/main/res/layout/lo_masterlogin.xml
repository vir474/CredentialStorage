<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.viral.vir474cred.app.MainActivity">


    <TextView
        android:layout_marginTop="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/holders_name"
        android:id="@+id/tv_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_pw_main"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/help_display"
        android:id="@+id/tv_display"
        android:layout_above="@+id/et_pw_main"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_marginTop="30dp"
        android:id="@+id/ibtn_master_submit"
        android:layout_below="@+id/et_pw_main"
        android:background="@drawable/master_submit"
        android:layout_alignRight="@+id/et_pw_main"
        android:layout_alignEnd="@+id/et_pw_main"
        android:layout_alignLeft="@+id/et_pw_main"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        />

</RelativeLayout>
